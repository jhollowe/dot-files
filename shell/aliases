# change or add options to commands
if test -x /usr/sbin/iotop; then alias "iotop"="sudo iotop"; fi
if test -x /usr/sbin/nethogs; then alias "nethogs"="sudo nethogs"; fi
alias "l"="ls -hF"
alias "la"='ls -A'
alias "ll"="ls -hlF"
alias "lll"="ls -halF"


# shortcuts
alias ".."="cd .."
alias "cd.."="cd .."
alias "..."="cd ../.."

# call functions or scripts
alias dot="cd ~/dot-files && ./install"
